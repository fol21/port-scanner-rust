    "version": "0.2.0",
    "configurations": [
        {
            "type": "lldb",
            "request": "launch",
            "name": "Debug executable 'port-scanner-rust'",
            "cargo": {
                "args": [
                    "build",
                    "--bin=port-scanner-rust",
                    "--package=port-scanner-rust"
                ],
                "filter": {
                    "name": "port-scanner-rust",
                    "kind": "bin"
                }
            },
            "args": [
                "./data/adresses.json"
            ],
            "cwd": "${workspaceFolder}"
        },
        {
            "type": "lldb",
            "request": "launch",
            "name": "Debug unit tests in executable 'port-scanner-rust'",
            "cargo": {
                "args": [
                    "test",
                    "--no-run",
                    "--bin=port-scanner-rust",
                    "--package=port-scanner-rust",
                ],
                "filter": {
                    "name": "port-scanner-rust",
                    "kind": "bin"
                }
            },
            "args": ["--nocapture"],
            "cwd": "${workspaceFolder}"
        }
    ]
}